@using Microsoft.AspNetCore.Components.Authorization
﻿<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">FutsalApi.UI</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="futsal-search">
                <span class="bi bi-search-nav-menu" aria-hidden="true"></span> Futsal Search
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="futsal-grounds">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Futsal Grounds
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="my-bookings">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> My Bookings
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="my-notifications">
                        <span class="bi bi-bell-fill-nav-menu" aria-hidden="true"></span> My Notifications
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="my-payments">
                        <span class="bi bi-credit-card-fill-nav-menu" aria-hidden="true"></span> My Payments
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="profile">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Profile
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/manage/two-factor-authentication">
                        <span class="bi bi-shield-lock-fill-nav-menu" aria-hidden="true"></span> Two-Factor Auth
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/manage/deactivate-account">
                        <span class="bi bi-person-x-fill-nav-menu" aria-hidden="true"></span> Deactivate Account
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/dashboard">
                        <span class="bi bi-speedometer2-nav-menu" aria-hidden="true"></span> Admin Dashboard
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/send-notification">
                        <span class="bi bi-send-fill-nav-menu" aria-hidden="true"></span> Send Notification
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/user-roles">
                        <span class="bi bi-people-fill-nav-menu" aria-hidden="true"></span> User Roles
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/assign-user-role">
                        <span class="bi bi-person-plus-fill-nav-menu" aria-hidden="true"></span> Assign User Role
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="bi bi-box-arrow-in-right-nav-menu" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="register">
                        <span class="bi bi-person-plus-fill-nav-menu" aria-hidden="true"></span> Register
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

