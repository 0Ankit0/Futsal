@page "/register"
@using FutsalApi.UI.Shared.Services
@using FutsalApi.UI.Shared.Models
@inject AuthService AuthService
@inject NavigationManager NavigationManager

<h1>Register</h1>

<div class="card">
    <div class="card-body">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" @bind="registerRequest.Email" />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" @bind="registerRequest.Password" />
        </div>

        <div class="form-group">
            <label for="confirmPassword">Confirm Password</label>
            <input type="password" class="form-control" id="confirmPassword" @bind="registerRequest.ConfirmPassword" />
        </div>

        <button class="btn btn-primary" @onclick="Register">Register</button>
    </div>
</div>

@code {
    private FutsalApi.UI.Shared.Models.RegisterRequest registerRequest = new FutsalApi.UI.Shared.Models.RegisterRequest();

    private async Task Register()
    {
        var result = await AuthService.Register(registerRequest);
        if (result)
        {
            NavigationManager.NavigateTo("/login");
        }
    }
}
