@page "/login"
@using FutsalApi.UI.Shared.Services
@using FutsalApi.UI.Shared.Models
@inject AuthService AuthService
@inject NavigationManager NavigationManager

<h1>Login</h1>

<div class="card">
    <div class="card-body">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" @bind="loginRequest.Email" />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" @bind="loginRequest.Password" />
        </div>

        <button class="btn btn-primary" @onclick="Login">Login</button>
    </div>
</div>

@code {
    private LoginRequest loginRequest = new LoginRequest();

    private async Task Login()
    {
        var result = await AuthService.Login(loginRequest);
        if (result)
        {
            NavigationManager.NavigateTo("/");
        }
    }
}
