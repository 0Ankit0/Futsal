# Base image for ASP.NET Core runtime
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS base
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

# Build stage: build your application
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src

# Copy project files and restore dependencies
COPY ["FutsalApi.AppHost/FutsalApi.AppHost.csproj", "FutsalApi.AppHost/"]
COPY ["FutsalApi.ApiService/FutsalApi.ApiService.csproj", "FutsalApi.ApiService/"]
COPY ["FutsalApi.ServiceDefaults/FutsalApi.ServiceDefaults.csproj", "FutsalApi.ServiceDefaults/"]
COPY ["FutsalApi.Tests/FutsalApi.Tests.csproj", "FutsalApi.Tests/"]
COPY ["FutsalApi.sln", "."]
RUN dotnet restore "FutsalApi.sln"

# Copy all files and build the application
COPY . .
WORKDIR "/src/."
RUN dotnet build -c $BUILD_CONFIGURATION

# Publish stage: create the final output folder
FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

# Final stage: create the runtime image
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .

ENTRYPOINT ["dotnet", "FutsalApi.dll"]
